#include "ui/menudef.h"

// Defines //

#define WINDOW_X		16
#define WINDOW_Y		16
#define WINDOW_WIDTH	400
#define WINDOW_HEIGHT	195
#define GROUP_NAME		"grpView"

// Macros //

#include "ui/menumacros.h"
		
// Options Menu //
	
menuDef {
	name		"trickjump_view"
	visible		0
	fullscreen	0
	rect		WINDOW_X WINDOW_Y WINDOW_WIDTH WINDOW_HEIGHT
	style		WINDOW_STYLE_FILLED
	
	onESC {
		close trickjump_view ;
	}

// Window //

#define SUBWINDOW_WIDTH WINDOW_WIDTH-12

WINDOW( "VIEW", 94 )

	SUBWINDOW( 6, 32, (SUBWINDOW_WIDTH), 132, "HUD DISPLAY" )
MULTI( 8, 48, (SUBWINDOW_WIDTH)-4, 10, "Trickjump HUD:", 	.2, 8, "cg_drawTJHud", cvarFloatList { "Off" 0 "1" 1 "2" 2 }, "" )

MULTI( 8, 60, (SUBWINDOW_WIDTH)-4, 10, "Draw speed:", 	.2, 8, "cg_drawSpeed", cvarFloatList { "Off" 0 "1" 1 "2" 2 }, "" )

YESNO( 8, 72, (SUBWINDOW_WIDTH)-4, 10, "Drawspeed2:", .2, 8, "cg_drawSpeed2", "Show a movable speedometer." )

MULTI( 8, 84, (SUBWINDOW_WIDTH)-4, 10, "Drawspeed color:", .2, 8, "cg_speedColor", cvarStrList { "White"; "white"; "Yellow"; "yellow"; "Red"; "red"; "Green"; "green"; "Blue"; "blue"; "Magenta"; "magenta"; "Cyan"; "cyan"; "Orange"; "orange"; "Light Blue"; "0xa0c0ff"; "Medium Blue"; "mdblue"; "Light Red"; "0xffc0a0"; "Medium Red"; "mdred"; "Light Green"; "0xa0ffc0"; "Medium Green"; "mdgreen"; "Dark Green"; "dkgreen"; "Medium Cyan"; "mdcyan"; "Medium Yellow"; "mdyellow"; "Medium Orange"; "mdorange"; "Light Grey"; "ltgrey"; "Medium Grey"; "mdgrey"; "Dark Grey"; "dkgrey"; "Black"; "black" }, "Set the color for your speedometer." )

YESNO( 8, 96, (SUBWINDOW_WIDTH)-4, 10, "Draw overbounce detector:", .2, 8, "cg_drawOB", "Draws an overbounce detector." )
MULTI( 8, 108, (SUBWINDOW_WIDTH)-4, 10, "Draw CGaz:", 	.2, 8, "cg_drawCgaz", cvarFloatList { "Off" 0 "1" 1 "2" 2 "3" 3 }, "" )

YESNO( 8, 120, (SUBWINDOW_WIDTH)-4, 10, "Draw keys:", .2, 8, "cg_drawKeys", "Draws the keys user is pressing." )

YESNO( 8, 132, (SUBWINDOW_WIDTH)-4, 10, "Draw clock:", .2, 8, "cg_drawClock", "Draws the clock." )

YESNO( 8, 144, (SUBWINDOW_WIDTH)-4, 10, "Draw cgaz users:", .2, 8, "cg_drawCGazuUsers", "Draws the cgaz users on scoreboard." )

BUTTON ( 6, 170, WINDOW_WIDTH-12, 18, "BACK", .3, 14, close trickjump_view ; open trickjump )

}

